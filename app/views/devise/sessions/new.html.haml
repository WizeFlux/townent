= form_for resource, :as => resource_name, :url => session_path(resource_name), html: {class: 'cool'} do |f|
  %fieldset<>
    .legend<> Sign in
    
    .input-holder<>
      = f.label :email
      = f.email_field :email, :autofocus => true
      
    .input-holder<>
      = f.label :password
      = f.password_field :password
    
    .input-holder<>
      - if devise_mapping.rememberable?
        = f.label :remember_me
        = f.check_box :remember_me
        
    .controls<>
      = f.submit "Sign in", class: 'active'
      = link_to "Cancel", '/'
    


