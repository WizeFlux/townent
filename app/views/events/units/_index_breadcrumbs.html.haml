.row#index-breadcrumbs
  .large-12
    %ul.button-group.round
      %li
        %a.button.secondary{href: city_events_path(city), class: class_if('disabled', !genre)} All
      - Genre.each do |selected_genre|
        %li
          %a.button.secondary{href: city_genre_events_path(city, selected_genre), class: class_if('disabled',  genre == selected_genre)}= selected_genre.sw_name

    - if genre
      %dl.sub-nav
        %dt Category:
        %dd{class: class_if('active', !category)}
          %a{href: city_genre_events_path(city, genre)}= "All (#{genre.events.for_city(city).count})"
        
        - genre.categories.each do |selected_category|
          - category_events_count = selected_category.events.for_city(city).count
          - if category_events_count > 0
            %dd{class: class_if('active', category == selected_category)}
              %a{href: city_genre_category_events_path(city, genre, selected_category)}= "#{selected_category.sw_name} (#{category_events_count})"
