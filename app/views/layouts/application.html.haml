!!! 5
%head
  %meta{ :charset => "utf-8" }
  %title= content_for?(:title) ? yield(:title) : "Untitled"
  = csrf_meta_tag
  = stylesheet_link_tag :application
  = javascript_include_tag :application
  
%body
  %nav.top-bar<>
    %ul<>
      %li<>
        %h1
          %a{href: '/'}
            %img{src: '/assets/logo.png', alt: 'Gdebilet'}
      %li<>
        %img{src: '/assets/events.png', alt: 'Events'}
        %a{href: '/'}Events
      %li<>
        %img{src: '/assets/artists.png', alt: 'Artists'}
        %a{href: '/event_groups'}Artists
      %li.search<>
        %input{type: 'text', placeholder: 'Search by artist, event or even more...'}
        
  = yield

  %nav#footer
    %ul<>
      %li<>
        %h1
          %a{href: '#', onclick: '$(window).scrollTop(0)'}
            %img{src: '/assets/scroller.png', alt: 'Scroll top'}
      %li<>
        %img{src: '/assets/events.png', alt: 'Events'}
        %a{href: '#'}Events
      %li<>
        %img{src: '/assets/artists.png', alt: 'Artists'}
        %a{href: '#'}Artists
      %li<>
        %a{href: '#'}= image_tag 'social/vk.png'
        %a{href: '#'}= image_tag 'social/twitter.png'
        %a{href: '#'}= image_tag 'social/facebook.png'
    